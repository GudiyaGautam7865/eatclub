# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# IMPORTANT: Always use /eatclub at the end (NOT /test)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/eatclub?retryWrites=true&w=majority

# For local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/eatclub

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Admin Seed Configuration
SEED_ADMIN_EMAIL=admin@eatclub.com
SEED_ADMIN_PASS=your_secure_admin_password

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Email Configuration (Optional)
EMAIL_USER=your_gmail@gmail.com
EMAIL_PASS=your_app_password
FRONTEND_URL=http://localhost:5173

# Logger Configuration
LOG_LEVEL=debug
